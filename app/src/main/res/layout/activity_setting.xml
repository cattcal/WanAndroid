<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".model.mine.activity.SettingActivity">

    <cn.hujw.titlebar.library.TitleBar
        style="@style/TitleBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/setting_title" />


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="0px">

        <cn.hujw.widget.layout.SettingBar
            android:id="@+id/sb_setting_about_us"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:bar_leftText="关于WanAndroid"
            app:bar_rightIcon="@drawable/ico_go_black" />
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="0px">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_setting_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/textColor"
            android:padding="12dp"
            android:text="退出登录" />
    </androidx.cardview.widget.CardView>

</LinearLayout>